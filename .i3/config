set $mod Mod4

exec_always --no-startup-id numlockx on
workspace_auto_back_and_forth yes


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #volume up
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #volume down
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Touchpad controls
# bindsym XF86TouchpadToggle exec /some/path/toggletouchpad.sh # toggle touchpad

# Screenshot
bindsym Print exec scrot 'scrot_%Y-%m-%d-%T_$wx$h.png' -e 'mv $f ~/Pictures/'
# scrot & gimp - select window or rectangle
# bindsym Mod1+Print exec scrot -s -e 'mv $f /tmp/ && gimp /tmp/$f'
bindsym $mod+Print exec scrot 'screenshot-%Y-%m-%d-%T_$wx$h.png' -s -e 'mv $f ~/Pictures/ && gimp ~/Pictures/screenshot-%Y-%m-%d-%T_$wx$h.png'

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym $mod+Tab workspace next

hide_edge_borders both

# WORKSPACES
#exec --no-startup-id i3-msg 'workspace 1; exec gnome-terminal --command byobu --maximize --hide-menubar; workspace 2; exec firefox; workspace 3; exec thunderbird'
exec --no-startup-id i3-msg 'workspace 1; exec gnome-terminal --command byobu --hide-menubar'
#exec --no-startup-id i3-msg 'workspace 1; exec gnome-terminal --command byobu --maximize --hide-menubar; workspace 2; append_layout ~/.i3/workspace-jackaudio.json'

for_window [class="Qtractor" instance="Mixer - Qtractor"] floating disable
# exec --no-startup-id /usr/lib/gnome-settings-daemon/gnome-settings-daemon

# MODES
mode "App launch" {
    bindsym f exec thunar, mode "default"
    bindsym w exec firefox, mode "default"
    bindsym j exec qjackctl, mode "default"
    bindsym q exec qtractor, mode "default"
    bindsym e exec emacs, mode "default"
    bindsym m exec thunderbird, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $system_mode System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$system_mode" {
    bindsym l exec --no-startup-id ~/scripts/px-i3exit.sh lock, mode "default"
    bindsym e exec --no-startup-id px-i3exit.sh logout, mode "default"
    bindsym s exec --no-startup-id px-i3exit.sh suspend, mode "default"
    bindsym h exec --no-startup-id px-i3exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id px-i3exit.sh reboot, mode "default"
    bindsym Shift+s exec --no-startup-id px-i3exit.sh shutdown, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode "resize" {
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    bindsym j resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize shrink height 10 px or 10 ppt
    bindsym semicolon resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

