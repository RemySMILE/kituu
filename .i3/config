set $gray   #333333
set $lgray  #555555
set $red    #900000
set $dred   #300000
set $yel    #AAAA99
set $oblue  #0088CC
set $llgray #2f343a
set $dgray  #222222
set $bgray  #292d2e

# Window Decorations Colors
#class                    border    backgr.  text    indicator
client.focused            $gray     $gray    $orange  $red
client.unfocused          $gray     $lgray   $yel     $bgray
client.focused_inactive   $gray     $gray    $lgray   $bgray
client.urgent             $llgray   $gray    $orange  $red

bar {
    # status_command i3status
    status_command i3status -c ~/.i3/i3status.conf
    colors {
        separator  $lgray
        background $dgray
        statusline $orange
        #class             border  backgr. text
        focused_workspace  $orange $orange  $dgray
        active_workspace   $gray   $gray    $white
        inactive_workspace $gray   $gray    $lgray
        urgent_workspace   $orange $gray    $orange
    }
}

